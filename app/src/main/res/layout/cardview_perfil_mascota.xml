<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilMascota"
    android:layout_width="100dp"
    android:layout_height="120dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_marginBottom="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/perrorosa"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvRaitingTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_toLeftOf="@+id/imgRaitingTotal"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6dp"/>

            <ImageView
                android:id="@+id/imgRaitingTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_48color"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>